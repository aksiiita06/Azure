{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "networkInterfaceName": {
      "type": "string",
      "defaultValue": "rhel-sap-2504"
    },
    "networkSecurityGroupName": {
      "type": "string",
      "defaultValue": "rhel-sap-2-nsg"
    },
    "networkSecurityGroupRules": {
      "type": "array",
      "defaultValue": [
        {
          "name": "SSH",
          "properties": {
            "priority": 300,
            "protocol": "TCP",
            "access": "Allow",
            "direction": "Inbound",
            "sourceAddressPrefix": "*",
            "sourcePortRange": "*",
            "destinationAddressPrefix": "*",
            "destinationPortRange": "22"
          }
        }
      ]
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "default"
    },
    "virtualNetworkId": {
      "type": "string",
      "defaultValue": "[resourceId(resourceGroup().name,'Microsoft.Network/virtualNetworks','sapnetwork')]"
    },
    "publicIpAddressName": {
      "type": "string",
      "defaultValue": "rhel-sap-2-ip"
    },
    "publicIpAddressType": {
      "type": "string",
      "defaultValue": "Dynamic"
    },
    "publicIpAddressSku": {
      "type": "string",
      "defaultValue": "Basic"
    },
    "virtualMachineName": {
      "type": "string",
      "defaultValue": "rhel-sap-2"
    },
    "virtualMachineComputerName": {
      "type": "string",
      "defaultValue": "rhel-sap-2"
    },
    "virtualMachineRG": {
      "type": "string",
      "defaultValue": "resourceGroup().name"
    },
    "osDiskType": {
      "type": "string",
      "defaultValue": "Premium_LRS"
    },
    "dataDisks": {
      "type": "array",
      "defaultValue": [
        {
          "lun": 1,
          "createOption": "attach",
          "caching": "None",
          "writeAcceleratorEnabled": false,
          "id": "[ resourceId(resourceGroup().name, 'Microsoft.Compute/disks', 'SAP-MNT-2') ]",
          "name": null,
          "storageAccountType": null,
          "diskSizeGB": null,
          "diskEncryptionSet": null
        },
        {
          "lun": 2,
          "createOption": "attach",
          "caching": "None",
          "writeAcceleratorEnabled": false,
          "id": "[ resourceId(resourceGroup().name, 'Microsoft.Compute/disks', 'USR-SAP-2') ]",
          "name": null,
          "storageAccountType": null,
          "diskSizeGB": null,
          "diskEncryptionSet": null
        }
      ]

    },
    "virtualMachineSize": {
      "type": "string",
      "defaultValue": "Standard_DS1_v2"
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "ps1adm"
    },
    "adminPassword": {
      "type": "secureString",
      "defaultValue": "password@1234"
    }
  },
  "variables": {
    "nsgId": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroupName'))]",
    "vnetId": "[parameters('virtualNetworkId')]",
    "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]"
  },
  "resources": [
    { /*OS Disk Creation*/
      "apiVersion": "2020-06-30",
      "type": "Microsoft.Compute/disks",
      "name": "OSDISK-2",
      "location": "[resourceGroup().location]",
      "properties": {
        "creationData": {
          "createOption": "copy",
          "sourceResourceId": "[resourceId(resourceGroup().name,'Microsoft.Compute/snapshots','OSDISK-1')]"
        },
        "diskSizeGB": "64",
        "networkAccessPolicy": "AllowAll"
      },
      "sku": {
        "name": "Premium_LRS"
      },
      "tags": {}
    },
    { /*sap-mnt-1 Disk Creation as a copy*/
      "apiVersion": "2020-06-30",
      "type": "Microsoft.Compute/disks",
      "name": "SAP-MNT-2",
      "location": "[resourceGroup().location]",
      "properties": {
        "creationData": {
          "createOption": "copy",
          "sourceResourceId": "[resourceId(resourceGroup().name,'Microsoft.Compute/snapshots','sap-mnt-1')]"
        },
        "diskSizeGB": "10",
        "networkAccessPolicy": "AllowAll"
      },
      "sku": {
        "name": "Premium_LRS"
      },
      "tags": {}
    },
    { /*usr-sap-1 Disk Creation as a copy*/
      "apiVersion": "2020-06-30",
      "type": "Microsoft.Compute/disks",
      "name": "USR-SAP-2",
      "location": "[resourceGroup().location]",
      "properties": {
        "creationData": {
          "createOption": "copy",
          "sourceResourceId": "[resourceId(resourceGroup().name,'Microsoft.Compute/snapshots','usr-sap-1')]"
        },
        "diskSizeGB": "10",
        "networkAccessPolicy": "AllowAll"
      },
      "sku": {
        "name": "Premium_LRS"
      },
      "tags": {}
    },
    {
      "name": "[parameters('networkInterfaceName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2018-10-01",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkSecurityGroups/', parameters('networkSecurityGroupName'))]",
        "[concat('Microsoft.Network/publicIpAddresses/', parameters('publicIpAddressName'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')]"
              },
              "privateIPAllocationMethod": "Dynamic",
              "publicIpAddress": {
                "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/publicIpAddresses', parameters('publicIpAddressName'))]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[variables('nsgId')]"
        }
      }
    },
    {
      "name": "[parameters('networkSecurityGroupName')]",
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2019-02-01",
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": "[parameters('networkSecurityGroupRules')]"
      }
    },
    {
      "name": "[parameters('publicIpAddressName')]",
      "type": "Microsoft.Network/publicIpAddresses",
      "apiVersion": "2019-02-01",
      "location": "[parameters('location')]",
      "properties": {
        "publicIpAllocationMethod": "[parameters('publicIpAddressType')]"
      },
      "sku": {
        "name": "[parameters('publicIpAddressSku')]"
      }
    },
    {
      "name": "[parameters('virtualMachineName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2020-06-01",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', parameters('networkInterfaceName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "storageProfile": {
          "osDisk": {
            "createOption": "attach",
            "osType": "Linux",
            "managedDisk": {
              "storageAccountType": "[parameters('osDiskType')]",
              "id": "[ resourceId(resourceGroup().name, 'Microsoft.Compute/disks', 'OSDISK-2') ]"
            },
            "caching": "None",
            "writeAcceleratorEnabled": false
          },
          "copy": [
            {
              "name": "dataDisks",
              "count": "[length(parameters('dataDisks'))]",
              "input": {
                "lun": "[parameters('dataDisks')[copyIndex('dataDisks')].lun]",
                "createOption": "[parameters('dataDisks')[copyIndex('dataDisks')].createOption]",
                "caching": "[parameters('dataDisks')[copyIndex('dataDisks')].caching]",
                "diskSizeGB": "[parameters('dataDisks')[copyIndex('dataDisks')].diskSizeGB]",
                "managedDisk": {
                  "id": "[coalesce(parameters('dataDisks')[copyIndex('dataDisks')].id, if(equals(parameters('dataDisks')[copyIndex('dataDisks')].name, json('null')), json('null'), resourceId('Microsoft.Compute/disks', parameters('dataDisks')[copyIndex('dataDisks')].name)))]",
                  "storageAccountType": "[parameters('dataDisks')[copyIndex('dataDisks')].storageAccountType]"
                },
                "writeAcceleratorEnabled": "[parameters('dataDisks')[copyIndex('dataDisks')].writeAcceleratorEnabled]"
              }
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('networkInterfaceName'))]"
            }
          ]
        },
        /*"osProfile": {
          "computerName": "[parameters('virtualMachineComputerName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },*/
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true
          }
        }
      }
    }
  ],
  "outputs": {
    "adminUsername": {
      "type": "string",
      "value": "[parameters('adminUsername')]"
    }
  }
}